void pumpkinMoon() {
  //Face
  fill(255, 200, 0);
  stroke(0);
  strokeWeight(3);
  ellipseMode(RADIUS);
  ellipse(350, 275, 200, 200);

  //Mouth stroke
  fill(255, 175, 0); 
  stroke(0);
  strokeWeight(6);
  quad(225,325,250,350,250,375,225,350);
  quad(250,350,300,350,300,375,250,375);
  quad(300,350,300,375,325,400,325,375);
  quad(325,375,350,375,350,400,325,400);
  quad(350,375,375,350,375,375,350,400);
  quad(375,375,375,350,425,350,425,375);
  quad(425,350,425,375,450,350,450,325);

  //Mouth  
  noStroke();
  quad(225,325,250,350,250,375,225,350);
  quad(250,350,300,350,300,375,250,375);
  quad(300,350,300,375,325,400,325,375);
  quad(325,375,350,375,350,400,325,400);
  quad(350,375,375,350,375,375,350,400);
  quad(375,375,375,350,425,350,425,375);
  quad(425,350,425,375,450,350,450,325);
  
  //Eyes
  stroke(0);
  strokeWeight(3);
  triangle(225, 200, 275, 175, 300, 225);
  triangle(400, 175, 450, 200, 375, 225);

  //Nose
  quad(325, 250, 325, 275, 300, 300, 300, 275);
  quad(325, 250, 325, 275, 350, 300, 350, 275);
}

